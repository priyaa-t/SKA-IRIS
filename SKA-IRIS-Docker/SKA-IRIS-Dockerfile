FROM centos:7

RUN yum -y update
# Repositories
RUN yum -y --enablerepo=extras install epel-release
RUN yum -y update
RUN yum -y upgrade

# Packages we need or want
RUN yum -y install emacs \
                   joe \
                   less \
                   man \
                   man-pages \
                   man-pages-overrides \
                   nano \
                   openssl \
                   python3.6 \
                   python2-devel \
                   python3-devel \
                   pugixml \
                   wget \
                   vim \
                   sudo \
                   gsi-openssh-clients\
                   boost \
                   boost-thread \
                   boost-devel \
                   python2-pip \
                   python3-pip \
                   python-tk \
                   python3-tk \
                   git \
                   curl \
                   saods9 \
                   cmake \
                   cmake-gui \
                   gcc-c++ \
                   gcc-fortran \
                   ncurses \
                   ncurses-devel \
                   readline \
                   readline-devel \
                   flex \
                   bison \
                   blas \
                   blas-devel \
                   lapack \
                   lapack-devel \
                   cfitsio \
                   cfitsio-devel \
                   wcslib \
                   wcslib-devel \
                   hdf5 \
                   hdf5-devel \
#                   fftw \
#                   fftw-devel \
                   htop \
                   screen \
